<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".radiosdetails.view.RadiosDetails">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="414dp"
            android:layout_height="62dp"
            android:text="Ime radio stanice"
            android:textAlignment="center"
            android:textSize="32dp"
            app:layout_constraintBottom_toTopOf="@id/country"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/favicon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/country"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/country"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Drzava:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toRightOf="@id/favicon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/countrycode"/>

        <TextView
            android:id="@+id/countrycode"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Kod drzave:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/country"
            app:layout_constraintLeft_toRightOf="@id/favicon"
            app:layout_constraintBottom_toBottomOf="@id/favicon" />

        <TextView
            android:id="@+id/state"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Lokacija:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favicon" />

        <TextView
            android:id="@+id/state2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="16dp"
            android:text="Lokacija:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favicon" />

        <TextView
            android:id="@+id/language"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Jezik:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state" />

        <TextView
            android:id="@+id/language2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="12dp"
            android:text="Jezik:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state" />

        <TextView
            android:id="@+id/languagecode"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:text="Kod jezika:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language" />

        <TextView
            android:id="@+id/languagecode2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="24dp"
            android:text="Kod jezika:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language" />

        <TextView
            android:id="@+id/votes"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Glasovi:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/languagecode" />

        <TextView
            android:id="@+id/votes2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="8dp"
            android:text="Glasovi:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/languagecode" />

        <Button
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOMEPAGE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.814" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>